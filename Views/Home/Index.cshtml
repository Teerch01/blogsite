@model IEnumerable<blogsite.Models.DTO.ResponseDTO.PostResponseDTO>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container justify-content-center align-items-center">
    <h1 class="display-4 text-center">Welcome to My Simple Blog</h1>
    <p class="text-center">Check out our latest posts below:</p>
    @if (Model != null)
    {
        @foreach (var item in Model)
        {
            <div class="card" style="flex: 0 0 30%; margin: 10px;">
                <div class="card-body" style="padding: 10px;">
                    <img style="width: 100%; height: 100%" src="" alt="Card image cap">
                    <div style="padding: 10px; border: 0px">
                        <h5 class="card-title text-center" style="margin: 0;">@Html.DisplayFor(modelItem => item.Title)</h5>
                        <p style="margin: 0; display: -webkit-box;overflow: hidden; -webkit-box-orient: vertical;
                            -webkit-line-clamp: 2;">@Html.DisplayFor(modelItem => item.Content)</p>
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <form asp-action="ViewPost" asp-controller="Post" asp-route-itemid="@item.Id">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button  type="submit" style="background: none; border: none; padding: 0; font-size:13px">
                                    Read more
                                </button>
                            </form>
                            <small style="margin: 0;padding-left:100px">Posted on @item.CreatedOn.ToString("MMMM dd, yyyy")</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
