@model blogsite.Models.DTO.ResponseDTO.PostResponseDTO

@{
    ViewData["Title"] = "EditPost";
}


<div class="card" style="width:400px">
    <h2 class="text-center card-title">Edit Blog</h2>
    <div class="card-body text-center justify-content-center align-items-center">
        <form asp-action="EditPost">
            @if (ViewBag.Message != null)
            {
                <div class="form-group" style="color: green;">@ViewBag.Message</div>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" value="@Model.Id"/>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" value="@Model.Title">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group p-sm-1">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control">@Model.Content</textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group p-sm-2">
                <input type="submit" value="Confirm" class="btn btn-primary btn-sm" />
            </div>
            <div>
                <a class="btn btn-primary btn-sm" type="button" asp-controller="Login" asp-action="UserAccount">
                    Cancel
                </a>
            </div>
        </form>

    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}