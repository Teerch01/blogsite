@model IEnumerable<blogsite.Models.DTO.ResponseDTO.PostResponseDTO>

@{
    ViewData["Title"] = "UserPosts";
}
<div class="container justify-content-center align-items-center">

    @if (Model != null)
    {
        @foreach (var item in Model)
        {
            <div class="card" style="flex: 0 0 30%; margin: 10px; border:0px;">
                <div class="card-body" style="padding: 10px;">
                    <img style="width: 100%; height: 100%" src="" alt="Card image cap">
                    <div style="padding: 10px; border: 0px">
                        <h5 class="card-title text-center" style="margin: 0;">@Html.DisplayFor(modelItem => item.Title)</h5>
                        <p style="margin: 0; display: -webkit-box;overflow: hidden; -webkit-box-orient: vertical;
                            -webkit-line-clamp: 2;">@Html.DisplayFor(modelItem => item.Content)</p>
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <form asp-action="ViewPost" asp-controller="Post" asp-route-itemid="@item.Id">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" style="background: none; border: none; padding: 0;">
                                    Read more
                                </button>
                            </form>
                            <small style="margin: 0;padding-left:100px">Posted on @item.CreatedOn.ToString("MMMM dd, yyyy")</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    }

    <div class="d-flex justify-content-center align-items-center" style="margin-top: 10px;">
        <a class="btn btn-primary m-2" type="button" asp-action="CreatePost">
            Create New
        </a>
        <a class="btn btn-primary" type="button" asp-controller="Login" asp-action="UserAccount">
            Back
        </a>
    </div>
</div>